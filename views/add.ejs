<% include ./partials/header.ejs %>
    <div class="add-post w-full min-h-screen bg-zinc-800 text-white pt-1">
        <div class="flex flex-col items-center mt-24">
            <h1 class="text-4xl font-bold mb-8">Create a New Post</h1>
            <form action="/createpost" method="post" enctype="multipart/form-data" class="w-[32vw] bg-zinc-700 p-8 rounded-xl">
                <div class="mb-4">
                    <label for="title" class="block text-md font-medium text-gray-300">Title</label>
                    <input type="text" id="title" name="title" class="mt-1 block w-full px-3 py-2 bg-zinc-800 border border-zinc-600 rounded-md text-white focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
                </div>
                <div class="mb-4">
                    <label for="description" class="block text-md font-medium text-gray-300">Description</label>
                    <textarea id="description" name="description" rows="5" class="mt-1 block w-full px-3 py-2 bg-zinc-800 border border-zinc-600 rounded-md text-white focus:outline-none focus:ring-blue-500 focus:border-blue-500" required></textarea>
                </div>
                <div class="mb-6">
                    <label for="image" class="block text-md font-medium text-gray-300">Image</label>
                    <input type="file" id="image" name="postimage" class="mt-1 block w-full text-gray-300" required>
                </div>
                <button type="submit" class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded-full text-sm font-semibold">Add Post</button>
            </form>
        </div>
    </div>
<% include ./partials/footer.ejs %>