<% include ./partials/header.ejs %>
    <div class="feed w-full min-h-screen bg-zinc-800 text-white pt-1">
        <div class="flex flex-col items-center mt-24">
            <a href="/add" class="px-10 py-2 rounded-lg bg-red-600 hover:bg-red-700 text-xs font-semibold mt-4">Add New
                Post</a>
        </div>
        <div class="cards flex flex-wrap justify-center gap-10 px-10 mt-10">
            <% user.posts.forEach(function(elem){ %>
                <div class="card bg-zinc-700 p-4 rounded-xl shadow-lg transition-transform transform hover:scale-105 duration-300">
                    <div class="w-56 h-44 bg-gray-700 rounded-xl overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
                    <h3 class="text-xl font-semibold mt-3 text-white"><%= elem.title %></h3>
                    <h5 class="text-sm font-medium text-gray-400"><%= elem.description %></h5>
                </div>
            <%  }) %>
        </div>
    </div>
<% include ./partials/footer.ejs %>